<!DOCTYPE html>    <!--TOTO JE ZÁKLADNÍ BASE VIEW PRO VŠECHNY STRÁNKY V PROJEKTU
                       SLOUŽÍ JAKO PEVNEJ ZÁKLAD KTEREJ SE VŽDYCKY VYGENERUJE, ABY SE NEOPAKOVAL KÓD.
                       POTOM VYGENERUJE RENDERBODY A V JEDNOTLIVÝCH VIEWS SE POTOM PŘIDÁVÁ KÓD POUZE UŽ JAKOBY JEN DO "BODY"
                   -->
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - janak.platformaprosdilenireceptu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"> <!-- Ikonky (přidané s Identity -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/janak.platformaprosdilenireceptu.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!--<i class="bi bi-egg"></i>
                <span style="margin-right: 8px;"></span>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Janda Recepts</a>  -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="display: inline-block;">
                    <i class="bi bi-egg"></i>
                    Janda Recepts
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Product" asp-action="Index">Products</a>
                        </li>
                        <!-- Zde jsem zakomentoval tento if. Potřebuji totiž zobrazovat Products pro všechny a ne jenom přihlášenýho admina. Navíc v tuto 
                             chvíly se nemůžu přihlásit.
                        -->
                        <!-- (zavinac)if manifest="" (User.Identity.IsAuthenticated == true && (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Manager)))) //změna s Identity
                            //tento řádek určuje že Products se zobrazí pouze pokud je user zautentikován, toto ale změním aby to tady nebylo, protože to uvidí vždy
                            //tuto logiku si ale chci nechat, protože mi to bude sloužit na edit a mazání produktů pro Adminy a Manažery
                        {
                        } -->
                    </ul>
                </div>
                @{  //přídavek s Identity
                    //tento if znamená co se zobrazí v horním řádku pokud je někdo přihlášený a nebo nikoliv
                    //toto bych taky mohl pozměnit aby to buďto bylo jednodušší a nebo smysluplnější pro můj počin který potřebuju
                    @if (User.Identity.IsAuthenticated == false)
                    {
                        <ul class="navbar-nav navbar-right">
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Security" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus"></i> Sign Up</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-area="Security" asp-controller="Account" asp-action="Login"><i class="bi bi-unlock"></i> Login</a></li>
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person"></i> Logged as @User.Identity.Name</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item text-dark" asp-area="Security" asp-controller="Account" asp-action="Logout"><i class="bi bi-person-slash me-1"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - janak.platformaprosdilenireceptu - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
