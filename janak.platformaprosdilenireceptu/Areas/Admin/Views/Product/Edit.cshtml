@model Product

@{
	ViewData["Title"] = "Edit Product";  //TOTO JE VIEW NA EDIT
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit" method="post">  <!-- ROZDÍL JE ZDE V EDIT ACTION-->
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="ImageSrc">Image Source</label>
        <input class="form-control" asp-for="ImageSrc">
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>